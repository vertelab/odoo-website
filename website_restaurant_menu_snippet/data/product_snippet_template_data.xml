<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dynamic_filter_template_pos_category_restaurant_menu_1" name="Restaurant Menu">
            <div class="s_restaurant_product_catalog oe_img_bg o_bg_img_center oe_custom_bg" data-vcss="001" style="width: 100%">
                <div class="container">
                    <div class="row">
                        <t t-foreach="records" t-as="data" data-thumb="/website_sale/static/src/img/snippets_options/product_borderless_2.svg">
                            <div class="col-lg-6">
                                <ul class="list-unstyled my-3">
                                    <h3 t-esc="data['name']" class="s_restaurant_product_catalog_title"/>

                                    <t t-foreach="data['product_tmpl_ids']" t-as="product">
                                        <div class="o_carousel_product_card card w-100 border-0 bg-transparent pt16 pb16">
                                            <input type="hidden" name="product-id" t-att-data-product-id="product.id"/>
                                            <li class="s_restaurant_product_catalog_dish" data-name="Product">
                                                <p class="s_restaurant_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                                    <span t-esc="product.display_name" class="s_restaurant_product_catalog_dish_name s_restaurant_product_catalog_dish_dot_leaders"/>
                                                    <span t-esc="product._get_contextual_price_tax_selection()" class="s_restaurant_product_catalog_dish_price ms-auto ps-2" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                </p>
                                            </li>
                                            <t t-if="product.description_self_order">
                                                <hr style="border: 1px dashed black; margin-top: 10px; margin-bottom: 10px;"/>
                                                <span class="s_restaurant_product_description"  t-esc="product.description_self_order"/>
                                            </t>
                                        </div>
                                    </t>
                                </ul>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </template>

        <template id="dynamic_filter_template_pos_category_restaurant_menu_2" name="Restaurant Menu 2">
            <div class="s_restaurant_product_catalog oe_img_bg o_bg_img_center oe_custom_bg" data-vcss="001" style="width: 100%">
                <div class="container">
                    <div class="row">
                        <t t-foreach="records" t-as="data" data-thumb="/website_restaurant_menu_snippet/static/img/Ã¶ltapp.jpeg">
                            <div class="col-lg-12">
                                <ul class="list-unstyled my-3">
                                    <h3 t-esc="data['name']" class="s_restaurant_product_catalog_title"/>

                                    <div class="container">
                                        <div class="row col-lg-12">
                                            <t t-foreach="data['product_tmpl_ids']" t-as="product">
                                                <div class="col-lg-4">
                                                    <div class="row col-lg-12 pt16 pb16 o_colored_level">
                                                        <div class="col-lg-6 d-flex align-items-center">
                                                            <img t-attf-src="/web/image/product.product/{{ product.id }}/image_1920" style="max-width: 100%; height: auto; object-fit: contain;" class="s_features_grid_icon img img-fluid o_we_custom_image rounded-circle" alt="Product image"/>

                                                        </div>
                                                        <div class="col-lg-6 d-flex align-items-center s_features_grid_content">
                                                            <div class="s_restaurant_product_catalog_dish">
                                                                <h4 t-esc="product.display_name" class="s_restaurant_product_catalog_title s_restaurant_product_catalog_dish_dot_leaders"/><br/>
                                                                <p class="s_restaurant_product_description"  t-esc="product.description_self_order"/>
                                                                <p><strong>
                                                                    <span t-esc="product._get_contextual_price_tax_selection()" class="s_restaurant_product_catalog_dish_price ms-auto ps-2" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                </strong><br/></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </t>
                    </div>
                </div>

            </div>
        </template>
    </data>
</odoo>