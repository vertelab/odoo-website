<odoo>
    <data>

        <record id="dynamic_snippet_pos_categories" model="ir.filters">
            <field name="name">POS Categories</field>
            <field name="model_id">pos.category</field>
            <field name="user_id" eval="False" />
            <field name="domain">[]</field>
            <field name="sort">['create_date desc']</field>
            <field name="action_id" ref="website.action_website"/>
        </record>

        <record id="dynamic_filter_pos_categories" model="website.snippet.filter">
            <field name="filter_id" ref="website_restaurant_menu_snippet.dynamic_snippet_pos_categories"/>
            <field name="field_names">name,product_tmpl_ids,image_128</field>
            <field name="limit" eval="16"/>
            <field name="name">POS Categories</field>
        </record>
    </data>

</odoo>