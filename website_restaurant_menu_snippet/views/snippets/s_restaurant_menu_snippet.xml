<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_restaurant_menu_snippet">
        <section class="s_restaurant_menu oe_img_bg o_bg_img_center oe_custom_bg pt48 pb32" style="background-image: url('/website_restaurant_menu_snippet/static/img/s_product_catalog_default_image.jpg');" data-vcss="001">
            <div class="container"> <!-- s_allow_columns -->
                <h2>Menu</h2>
                <p>Add a menu description.</p>
                <div class="dynamic_snippet_template"/>
            </div>
        </section>
    </template>

    <template id="restaurant_menu_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="dynamic_restaurant_menu_snippet" data-selector="section.s_restaurant_menu">
                <we-select string="Category" data-name="product_category_opt" data-attribute-name="productCategoryId" data-no-preview="true">
                    <we-button data-select-data-attribute="all">All Categories</we-button>
                </we-select>
                <we-select string="Template" data-name="template_opt" data-attribute-name="templateKey" data-no-preview="true">
                </we-select>
                <we-select string="Fetched elements" data-name="number_of_records_opt" data-attribute-name="numberOfRecords" data-no-preview="true">
                    <we-button t-foreach="range(1, 17)" t-as="value" t-att-data-select-data-attribute="value" t-esc="value"/>
                </we-select>
            </div>
        </xpath>
    </template>


    <template id="snippets" inherit_id="website.snippets" name="restaurant snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="website_restaurant_menu_snippet.s_restaurant_menu_snippet" string="Restaurant Menu" t-thumbnail="/website/static/src/img/snippets_thumbs/s_product_list.svg"/>
        </xpath>
    </template>

    <record id="website_restaurant_menu_snippet.s_restaurant_menu_snippet_000_js" model="ir.asset">
        <field name="name">Restaurant Menu Dynamic Snippet 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_restaurant_menu_snippet/static/src/snippets/s_restaurant_menu_snippet/000.js</field>
    </record>

    <record id="website_restaurant_menu_snippet.s_restaurant_menu_snippet_0001_scss" model="ir.asset">
        <field name="name">Restaurant Menu Dynamic Snippet 0001 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_restaurant_menu_snippet/static/src/snippets/s_restaurant_menu_snippet/001.scss</field>
    </record>

    <record id="website_restaurant_menu_snippet.s_restaurant_menu_snippet_000_xml" model="ir.asset">
        <field name="name">Restaurant Menu Dynamic snippet 000 XML</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_restaurant_menu_snippet/static/src/snippets/s_restaurant_menu_snippet/000.xml</field>
    </record>

</odoo>