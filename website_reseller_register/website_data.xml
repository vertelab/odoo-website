<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        
        <template id="thanks_for_your_application" name="Thanks for your application">
            <div t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section>
                        <h1 class="text-center">Thanks for your application!</h1>
                    </section>
                    <section>
                        <a t-att-href="'/reseller_register/%s?token=%s' %(issue.id, issue.partner_id.token)"><h3 class="text-center">Use this link to review your registration</h3></a>
                    </section>
                </div>
            </div>
        </template>
        
        <record id="reseller_template" model="res.users">
                <field name="name">Reseller Template</field>
                <field name="login">resellertemplate</field>
                <field name="active" eval="False"/>
                <!-- Avoid auto-including this user in any default group, just like a typical portal member -->
                <field name="groups_id" eval="[(6, 0,  [ref('base.group_portal')])]"/>
        </record>
        
    </data>
</openerp>
